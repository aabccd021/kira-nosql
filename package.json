{
  "name": "kira-nosql",
  "version": "0.1.21",
  "description": "NoSQL utils for Kira",
  "repository": "git@github.com:aabccd021/kira-nosql.git",
  "author": "aabccd021 <aabccd021@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "node": "./dist/cjs/index.js",
      "default": "./dist/mjs/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc --build tsconfig.mjs.json && tsc --build tsconfig.cjs.json",
    "lint": "eslint . --ext ts",
    "test": "jest --coverage --verbose"
  },
  "dependencies": {
    "assert-never": "^1.2.1",
    "kira-core": "^0.3.18"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "filenames",
      "functional",
      "import",
      "jest",
      "no-null",
      "only-warn",
      "simple-import-sort",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:functional/all",
      "plugin:import/errors",
      "plugin:import/typescript",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "lib/**"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "eqeqeq": "warn",
      "functional/no-conditional-statement": "off",
      "functional/no-expression-statement": "off",
      "functional/functional-parameters": "off",
      "import/no-cycle": "warn",
      "no-null/no-null": "warn",
      "no-unused-expressions": "off",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn",
      "unused-imports/no-unused-imports-ts": "warn",
      "max-len": [
        "warn",
        {
          "code": 100,
          "comments": 100,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ],
      "max-params": [
        "warn",
        3
      ]
    }
  }
}